services:
  mysql:
    image: mysql:8.0
    container_name: mysqld
    environment:
      MYSQL_ROOT_PASSWORD: YtReWq4321
      MYSQL_DATABASE: virtd
      MYSQL_USER: app
      MYSQL_PASSWORD: QwErTy1234
    networks:
      app-network:
        ipv4_address: 172.20.0.10
    volumes:
      - mysql_data:/var/lib/mysql
      - ./mysql-init:/docker-entrypoint-initdb.d:ro
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      timeout: 20s
      retries: 10

  python-app:
    build:
      context: .
      dockerfile: Dockerfile.python
    container_name: python-web
    depends_on:
      mysql:
        condition: service_healthy
    networks:
      app-network:
        ipv4_address: 172.20.0.5
    environment:
      DB_HOST: 172.20.0.10
      DB_PORT: 3306
      DB_NAME: virtd  # Можно менять на custom_app_db или example
      DB_USER: app
      DB_PASSWORD: QwErTy1234
    restart: unless-stopped

  reverse-proxy:
    image: haproxy:2.8
    container_name: reverse-proxy
    depends_on:
      python-app:
        condition: service_started
    networks:
      app-network: {}
    ports:
      - "127.0.0.1:8080:8080"
    volumes:
      - ./haproxy/reverse/haproxy.cfg:/usr/local/etc/haproxy/haproxy.cfg:ro
    restart: unless-stopped

  ingress-proxy:
    image: nginx:alpine
    container_name: ingress-proxy
    depends_on:
      - reverse-proxy
    network_mode: host
    volumes:
      - ./nginx/ingress/default.conf:/etc/nginx/conf.d/default.conf:ro
      - ./nginx/ingress/nginx.conf:/etc/nginx/nginx.conf:ro
    restart: unless-stopped

networks:
  app-network:
    driver: bridge
    ipam:
      config:
        - subnet: 172.20.0.0/24
          gateway: 172.20.0.1

volumes:
  mysql_data:
